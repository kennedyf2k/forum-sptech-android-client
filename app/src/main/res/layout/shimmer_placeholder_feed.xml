<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:maxHeight="300dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cv_box_item_feed"
    android:layout_marginBottom="10dp"
    android:layout_margin="5dp"
    android:orientation="vertical"
    app:cardCornerRadius="20dp"

    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_gravity="center">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <de.hdodenhof.circleimageview.CircleImageView

                android:id="@+id/iv_profile_item"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="#A69B9B"
                android:contentDescription="@string/perfil_description_foto"

                android:layout_marginStart="5dp"
                android:layout_marginTop="16dp"

                />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView

                        android:id="@+id/tv_name_position_1"
                        android:maxHeight="100dp"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:background="#A69B9B"

                        android:textStyle="bold"

                        android:layout_marginTop="16dp"
                        android:layout_marginStart="8dp"

                        />

                    <TextView

                        android:id="@+id/tv_position_fixed"
                        android:layout_width="170dp"
                        android:layout_height="wrap_content"

                        android:background="#A69B9B"

                        android:layout_marginTop="16dp"
                        android:layout_marginStart="3dp"

                        />

                    <TextView

                        android:id="@+id/tv_name_position_2"
                        android:layout_width="70dp"
                        android:layout_height="wrap_content"

                        android:background="#A69B9B"
                        android:textStyle="bold"

                        android:layout_marginTop="16dp"
                        android:layout_marginStart="3dp"

                        />

                </LinearLayout>

                <TextView

                    android:id="@+id/tv_horas_atras"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:background="#A69B9B"
                    android:layout_marginStart="8dp"

                    />

            </LinearLayout>


        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView

                android:id="@+id/tv_tipo_post"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:gravity="center"
                android:background="@drawable/feed_item_shape_duvida_laranja"

                android:textColor="@color/white"
                android:textSize="11sp"

                android:layout_marginStart="16dp"
                android:layout_marginTop="8dp"

                />

            <TextView

                android:id="@+id/tv_categoria_post"
                android:layout_width="100dp"
                android:layout_height="wrap_content"

                android:gravity="center"
                android:background="@drawable/feed_item_shape_categoria_laranja"

                android:textColor="@color/feed_item_feed_name_categoria_laranja"
                android:textSize="11sp"

                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"

                />

        </LinearLayout>

        <TextView

            android:id="@+id/tv_titulo_box"
            android:layout_width="370dp"
            android:layout_height="wrap_content"

            android:background="#A69B9B"

            android:layout_marginTop="24dp"
            android:layout_marginStart="16dp"

            android:textColor="@color/feed_item_feed_name_titulo"
            android:textStyle="bold"

            />

        <ScrollView

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scrollbars="vertical">

            <TextView

                android:id="@+id/tv_texto_box"
                android:layout_width="370dp"
                android:layout_height="100dp"
                android:paddingBottom="10dp"

                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginTop="24dp"

                android:background="#A69B9B"

                />

        </ScrollView>

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="10dp"
            android:paddingTop="10dp"
            android:layout_gravity="center">

            <ImageView

                android:id="@+id/iv_curtir"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_gravity="center"
                android:background="@drawable/feed_item_img_curtir_desmarcado"
                android:layout_marginStart="16dp"

                />

            <TextView

                android:id="@+id/tv_numero_curtidas"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#A69B9B"
                android:textSize="16sp"
                android:layout_marginStart="5dp"
                android:layout_gravity="center"

                />

            <ImageView

                android:id="@+id/iv_comentar"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:background="@drawable/feed_item_img_comentario"
                android:layout_marginStart="16dp"
                android:layout_gravity="center"

                />

            <TextView

                android:id="@+id/tv_numero_comentarios"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#A69B9B"
                android:textSize="16sp"
                android:layout_marginStart="5dp"
                android:layout_gravity="top"

                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="end">

                <ImageView

                    android:id="@+id/iv_salvar"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:background="@drawable/feed_item_img_salvar"
                    android:layout_marginEnd="32dp"
                    android:layout_gravity="center"

                    />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>