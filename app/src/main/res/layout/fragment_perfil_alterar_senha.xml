<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.ConfigurarPerfilFragment">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:background="@drawable/header"
        android:text="@string/alterar_senha_header"
        android:textColor="@color/white"
        android:textAlignment="center"
        android:paddingTop="24dp"
        android:textSize="16sp"
        android:textStyle="bold"/>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="24dp"
        android:layout_marginTop="48dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/borda">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="8dp">

                <TextView

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/alterar_senha_atual"
                    android:padding="8dp"
                    android:textSize="20sp"
                    android:textStyle="bold"

                    />

                <EditText

                    android:id="@+id/et_senha_atual"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/alterar_senha_atual"
                    android:textColor="@color/cinza"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="4dp"
                    android:inputType="textPassword"
                    />



            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:background="@drawable/borda">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="8dp">

                <TextView

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/alterar_senha_nova"
                    android:padding="8dp"
                    android:textSize="20sp"
                    android:textStyle="bold"

                    />

                <EditText

                    android:id="@+id/et_nova_senha"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/alterar_senha_nova"
                    android:textColor="@color/cinza"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="4dp"
                    android:inputType="textPassword"

                    />
            </LinearLayout>

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/borda"
            android:gravity="center">

            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="8dp">

                <TextView

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/alterar_senha_confirmar_nova"
                    android:padding="8dp"
                    android:textSize="20sp"
                    android:textStyle="bold"

                />

                <EditText

                    android:id="@+id/et_confirmar_nova_senha"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/alterar_senha_confirmar_nova"
                    android:textColor="@color/cinza"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="4dp"
                    android:inputType="textPassword"

                    />

            </LinearLayout>


        </LinearLayout>

        <TextView

            android:id="@+id/tv_msg_erro"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:text="Erroooo"
            android:padding="16dp"
            android:textColor="@color/login_erro"/>



        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="bottom">

            <Button

                android:id="@+id/btn_alterar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/azul_btn"
                android:text="@string/alterar_senha_btn_alterar"

                />

        </LinearLayout>

    </LinearLayout>

</FrameLayout>