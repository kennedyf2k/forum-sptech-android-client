<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TermsActivity"
    android:background="@drawable/fundo">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="24dp"
        android:orientation="vertical">

        <TextView

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:text="@string/titulo_termos"
            android:textSize="40sp"
            android:textStyle="bold"
            android:textColor="@color/azul_btn"

        />

        <TextView

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="56dp"
            android:textSize="18sp"
            android:textStyle="bold"
            android:text="@string/texto1_termos"
            android:textColor="@color/item_nao_selecionado"

        />

        <TextView

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="26dp"
            android:textSize="18sp"
            android:text="@string/texto2_termos"
            android:textColor="@color/item_nao_selecionado"

        />

        <TextView

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:textColor="@color/azul_btn"
            android:textStyle="bold"
            android:background="@drawable/dashed_underline"
            android:text="@string/texto_modificado1"

        />

        <TextView

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="26dp"
            android:textSize="18sp"
            android:text="@string/texto3_termos"
            android:textColor="@color/item_nao_selecionado"

        />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="26dp"
            android:textSize="18sp"
            android:text="@string/texto4_termos"
            android:textColor="@color/item_nao_selecionado"

        />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="26dp"
            android:textSize="18sp"
            android:text="@string/texto5_termos"
            android:textColor="@color/cinza_borda"

        />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center">

            <Button
                android:id="@+id/btn_login"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:layout_marginTop="16dp"

                android:backgroundTint="@color/login_input_selecionado_and_button"

                android:fontFamily="sans-serif-black"
                android:text="@string/aceitar_termos"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="20sp"

            />

        </LinearLayout>

    </LinearLayout>



</ScrollView>