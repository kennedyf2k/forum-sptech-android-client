<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/app_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/ThemeOverlay.AppCompat.ActionBar">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:background="@drawable/header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="0dp"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/nome_studenton"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="8dp"
                    android:layout_marginEnd="18dp">


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="60dp"
                        android:layout_marginBottom="5dp">

                        <ImageView

                            android:id="@+id/iv_arrow_back"
                            android:layout_weight="1"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:src="@drawable/arow_voltar"/>

                        <TextView
                            android:paddingEnd="12dp"
                            android:layout_weight="10"
                            android:layout_width="0dp"
                            android:textAlignment="center"
                            android:layout_height="wrap_content"
                            android:text="@string/alterar_senha_header"
                            android:textColor="@color/white"
                            android:textSize="20dp"/>

                    </LinearLayout>


                </LinearLayout>

            </LinearLayout>

        </androidx.appcompat.widget.Toolbar>

    </com.google.android.material.appbar.AppBarLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginTop="20dp"
        >

        <EditText
            android:id="@+id/et_esqueceu_senha_ra"
            android:layout_marginVertical="10dp"
            android:paddingHorizontal="10dp"
            android:paddingVertical="15dp"
            android:background="@drawable/borda_arredondada"
            android:layout_marginHorizontal="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/esqueceu_senha_ra"
            android:textSize="16sp"
            />

        <EditText
            android:id="@+id/et_esqueceu_senha_email"
            android:paddingVertical="15dp"
            android:paddingHorizontal="10dp"
            android:layout_marginVertical="10dp"
            android:background="@drawable/borda_arredondada"
            android:layout_marginHorizontal="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/esqueceu_senha_email"
            android:textSize="16sp"
            />

        <EditText
            android:id="@+id/et_esqueceu_senha_nova_senha"

            android:paddingHorizontal="10dp"
            android:paddingVertical="15dp"
            android:layout_marginVertical="10dp"
            android:background="@drawable/borda_arredondada"
            android:layout_marginHorizontal="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/alterar_senha_nova"
            android:textSize="16sp"
            />

        <EditText
            android:id="@+id/et_esqueceu_senha_confirmar_nova_senha"
            android:paddingHorizontal="10dp"
            android:layout_marginVertical="10dp"
            android:background="@drawable/borda_arredondada"
            android:layout_marginHorizontal="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/alterar_senha_confirmar_nova"
            android:textSize="16sp"
            android:paddingVertical="15dp"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1"
            android:gravity="bottom"
            >

            <TextView

                android:id="@+id/tv_esqueceu_senha_msg_erro"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:text="Erroooo"
                android:textColor="@color/login_erro"
                android:gravity="center"/>
            <Button
                android:id="@+id/btn_esqueceu_senha_alterar"
                android:layout_width="match_parent"
                android:layout_marginHorizontal="20dp"
                android:layout_marginVertical="20dp"
                android:layout_height="wrap_content"
                android:text="Alterar"
                android:background="@drawable/borda_arredondada"
                android:backgroundTint="@color/teal_200"
                />

        </LinearLayout>




    </LinearLayout>


</LinearLayout>
