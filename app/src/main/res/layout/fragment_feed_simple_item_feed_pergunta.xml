<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cv_box_item_feed"
    android:layout_marginBottom="5dp"
    android:orientation="vertical"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
       android:paddingVertical="14dp"
        android:paddingHorizontal="24dp"
        android:orientation="vertical"
        android:layout_gravity="center">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <de.hdodenhof.circleimageview.CircleImageView

                android:id="@+id/iv_profile_item"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/profile"
                android:contentDescription="@string/perfil_description_foto"

                android:layout_marginStart="5dp"
                android:layout_marginTop="16dp"

            />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView

                        android:id="@+id/tv_name_position_1"
                        android:maxHeight="100dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        tools:text="Daniel"
                        android:textStyle="bold"

                        android:layout_marginTop="16dp"
                        android:layout_marginStart="8dp"

                    />

                    <TextView

                        android:id="@+id/tv_position_fixed"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        android:text="@string/feed_item_simple_item_meio_perguntou"

                        android:layout_marginTop="16dp"
                        android:layout_marginStart="3dp"

                        />


                </LinearLayout>

                <TextView

                    android:id="@+id/tv_horas_atras"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="Há 4 horas"
                    android:layout_marginStart="8dp"

                />

            </LinearLayout>


        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp">



            <TextView

                android:id="@+id/tv_categoria_post"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:gravity="center"
                android:background="@drawable/feed_item_shape_categoria_laranja"

                android:textColor="@color/feed_item_feed_name_categoria_laranja"
                tools:text="SECRETÁRIA"
                android:textSize="11sp"




            />

        </LinearLayout>

        <TextView

            android:id="@+id/tv_titulo_box"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            tools:text="Pedi meu Bilhete único estudantil mas não sei aonde vai chegar"

            android:layout_marginTop="16dp"


            android:textColor="@color/feed_item_feed_name_titulo"
            android:textStyle="bold"

        />



            <TextView

                android:id="@+id/tv_texto_box"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                tools:text="Lorem ipsum dolor sit amet,
                consectetur adipiscing elit. Proin aliquet
                dapibus fringilla. Maecenas lacus felis,
                rhoncus in risus at, bibendum imperdiet ligula.Lorem ipsum dolor sit amet,
                consectetur adipiscing elit. Proin aliquet
                dapibus fringilla. Maecenas lacus felis,
                rhoncus in risus at, bibendum imperdiet ligula.l"

                />



        <TextView
            android:layout_marginVertical="16dp"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="#6FAEAEB2"/>

        <LinearLayout
            android:outlineSpotShadowColor="@color/teal_200"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
           >



            <ImageView

                android:id="@+id/iv_comentar"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:background="@drawable/feed_item_img_comentario"
                android:layout_marginStart="16dp"
                android:layout_gravity="center"

            />

            <TextView

                android:id="@+id/tv_numero_comentarios"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="Clique para responder"
                android:textSize="14sp"
                android:layout_marginStart="5dp"
                android:layout_gravity="center"
            />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="end">

                <ImageView

                    android:id="@+id/iv_salvar"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_gravity="center"

                    />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>